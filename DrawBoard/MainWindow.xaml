<Window x:Class="DrawBoard.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DrawBoard"
        xmlns:behaviors="http://schemas.microsoft.com/xaml/behaviors"
        xmlns:drawBehavior="clr-namespace:DrawBoard.Behaviors"
        xmlns:colorpicker="clr-namespace:ColorPickerLib.Controls;assembly=ColorPickerLib"
        xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
        xmlns:system="clr-namespace:System;assembly=mscorlib"
        xmlns:controls="clr-namespace:DrawBoard.UserControls"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        MinWidth="200"  
        MinHeight="200"
        Background="Transparent"
        Width="{Binding WindowWidth, Mode=TwoWay}"
        Height="{Binding WindowHeight, Mode=TwoWay}"
        x:Name="this">
    <Window.DataContext>
        <local:MainWindowViewModel/>
    </Window.DataContext>

    <behaviors:Interaction.Behaviors>
        <drawBehavior:WindowBehavior/>
    </behaviors:Interaction.Behaviors>
    
    <!--<Border.Effect>
        <BlurEffect Radius="20" KernelType="Gaussian"/>
    </Border.Effect>-->

    <!--테두리 Border-->
    <Border CornerRadius="10"
            BorderThickness="1">
        <Border.BorderBrush>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="{StaticResource winBorderColor1}" Offset="0"/>
                <GradientStop Color="{StaticResource winBorderColor2}" Offset="0.5"/>
                <GradientStop Color="{StaticResource winBorderColor3}" Offset="1"/>
            </LinearGradientBrush>
        </Border.BorderBrush>

        <Grid>
            <!--#region 전체 배경색-->
            <Border CornerRadius="10">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0.8">
                        <GradientStop Color="{Binding BackgroundColor1}" Offset="0"/>
                        <GradientStop Color="{Binding BackgroundColor2}" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>

                <!--#region 전체 컨트롤-->

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!--#region 안보이는 컨트롤-->
                    <Grid Width="1" Height="1" HorizontalAlignment="Left" VerticalAlignment="Top" Visibility="Collapsed">
                        <MediaElement 
                                  Source="{Binding WinMediaElementSource}"
                                  LoadedBehavior="Manual"
                                  Volume="{Binding WinVolume}">
                            <behaviors:Interaction.Behaviors>
                                <drawBehavior:MediaElementBehavior IsMediaElementPlay="{Binding IsWinMediaElementPlay}"/>
                            </behaviors:Interaction.Behaviors>
                        </MediaElement>

                        <MediaElement Source="{Binding LoseMediaElementSource}"
                                  LoadedBehavior="Manual"
                                  Volume="{Binding LoseVolume}">
                            <behaviors:Interaction.Behaviors>
                                <drawBehavior:MediaElementBehavior IsMediaElementPlay="{Binding IsLoseMediaElementPlay}"/>
                            </behaviors:Interaction.Behaviors>
                        </MediaElement>

                        <TextBox>
                            <behaviors:Interaction.Behaviors>
                                <drawBehavior:FocusOnOffBehavior IsFocus="{Binding IsFocusOnOff}"/>
                            </behaviors:Interaction.Behaviors>
                        </TextBox>
                    </Grid>
                    <!--#endregion-->

                    <!--#region 메뉴 버튼-->              
                    <StackPanel>
                    
                        <!--Logo-->
                        <StackPanel Orientation="Horizontal"
                                    Height="35"
                                    Margin="20,25,0,40">
                            
                            <controls:NeonText FontSize="20"
                                               FontFamily="MoeumT R"
                                               FontWeight="Medium"
                                               VerticalAlignment="Center"
                                               Margin="5,0,0,0"
                                               Text="뽑기판"
                                               Foreground="White"
                                               GlowColor="White"
                                               ActivateBlink="True"/>
                            <controls:NeonText FontSize="12"
                                               FontFamily="MoeumT R"
                                               FontWeight="Medium"                                               
                                               VerticalAlignment="Bottom"
                                               Margin="5,0,0,7"
                                               Text="(ver2.4)"
                                               Foreground="White"
                                               GlowColor="White"
                                               ActivateBlink="True"/>
                        </StackPanel>

                        <!--#region 당첨판 버튼-->
                        <RadioButton x:Name="menuWinLose"
                                     IsChecked="True"
                                     Style="{StaticResource menuButton}"
                                     Tag="{StaticResource color8}"
                                     Command="{Binding SettingChangeCommand}"
                                     CommandParameter="{x:Static local:SettingButtons.WinLose}">
                            <StackPanel Orientation="Horizontal">
                                <fa:IconImage Icon="FaceDizzy" Style="{StaticResource menuButtonIcon}"/>
                                <TextBlock Text="당첨판" Style="{StaticResource menuButtonText}"/>
                            </StackPanel>
                        </RadioButton>
                        <!--#endregion-->

                        <!--#region 순위판 버튼-->
                        <RadioButton x:Name="menuRanking"
                                     Style="{StaticResource menuButton}"
                                     Tag="{StaticResource color1}"
                                     Command="{Binding SettingChangeCommand}"
                                     CommandParameter="{x:Static local:SettingButtons.Ranking}">
                            <StackPanel Orientation="Horizontal">
                                <fa:IconImage Icon="RankingStar" Style="{StaticResource menuButtonIcon}"/>
                                <TextBlock Text="순위판" Style="{StaticResource menuButtonText}"/>
                            </StackPanel>
                        </RadioButton>
                        <!--#endregion-->

                        <!--#region 글자버튼-->
                        <RadioButton Style="{StaticResource menuButton}"
                                     Tag="{StaticResource color2}"
                                     Command="{Binding SettingChangeCommand}"
                                     CommandParameter="{x:Static local:SettingButtons.Text}"
                                     Visibility="{Binding IsSampleModeVisible}">
                            <StackPanel Orientation="Horizontal">
                                <fa:IconImage Icon="Font" Style="{StaticResource menuButtonIcon}"/>
                                <TextBlock Text="글자" Style="{StaticResource menuButtonText}"/>
                            </StackPanel>
                        </RadioButton>
                        <!--#endregion-->

                        <!--#region 박스버튼-->
                        <RadioButton Style="{StaticResource menuButton}"
                                     Tag="{StaticResource color5}"
                                     Command="{Binding SettingChangeCommand}"
                                     CommandParameter="{x:Static local:SettingButtons.Box}"
                                     Visibility="{Binding IsSampleModeVisible}">
                            <StackPanel Orientation="Horizontal">
                                <fa:IconImage Icon="Square" Style="{StaticResource menuButtonIcon}"/>
                                <TextBlock Text="박스" Style="{StaticResource menuButtonText}"/>
                            </StackPanel>
                        </RadioButton>
                        <!--#endregion-->

                        <!--#region 색상버튼-->
                        <RadioButton Style="{StaticResource menuButton}"
                                     Tag="{StaticResource color4}"
                                     Command="{Binding SettingChangeCommand}"
                                     CommandParameter="{x:Static local:SettingButtons.Color}"
                                     Visibility="{Binding IsSampleModeVisible}">
                            <StackPanel Orientation="Horizontal">
                                <fa:IconImage Icon="Palette" Style="{StaticResource menuButtonIcon}"/>
                                <TextBlock Text="색상" Style="{StaticResource menuButtonText}"/>
                            </StackPanel>
                        </RadioButton>
                        <!--#endregion-->

                        <!--#region 소리버튼-->
                        <RadioButton Style="{StaticResource menuButton}"
                                     Tag="{StaticResource color3}"
                                     Command="{Binding SettingChangeCommand}"
                                     CommandParameter="{x:Static local:SettingButtons.Sound}"
                                     Visibility="{Binding IsSampleModeVisible}">
                            <StackPanel Orientation="Horizontal">
                                <fa:IconImage Icon="Music" Style="{StaticResource menuButtonIcon}"/>
                                <TextBlock Text="소리" Style="{StaticResource menuButtonText}"/>
                            </StackPanel>
                        </RadioButton>
                        <!--#endregion-->

                        <!--#region 기타버튼-->
                        <RadioButton Style="{StaticResource menuButton}"
                                     Tag="{StaticResource color8}"
                                     Command="{Binding SettingChangeCommand}"
                                     CommandParameter="{x:Static local:SettingButtons.Etc}">
                            <StackPanel Orientation="Horizontal">
                                <fa:IconImage Icon="Sketch" Style="{StaticResource menuButtonIcon}"/>
                                <TextBlock Text="기타" Style="{StaticResource menuButtonText}"/>
                            </StackPanel>
                        </RadioButton>
                        <!--#endregion-->

                    </StackPanel>
                    <!--#endregion-->

                    <!--#region 우측 메인-->
                    <Border CornerRadius="0,10,10,0"
                            Grid.Column="1"
                            Background="Transparent">
                        <!--<Border.Background>
                            <LinearGradientBrush StartPoint="1,1" EndPoint="0,0">
                                <GradientStop Color="{StaticResource primaryBackColor1}" Offset="0"/>
                                <GradientStop Color="{StaticResource primaryBackColor2}" Offset="1"/>
                            </LinearGradientBrush>
                        </Border.Background>-->

                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="25"/>
                                <RowDefinition Height="90"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <!--#region 윈도우 컨트롤 버튼-->
                            <StackPanel x:Name="pnlControlBar"
                                        Grid.Row="0"
                                        Orientation="Horizontal"
                                        FlowDirection="RightToLeft"
                                        Background="Transparent"
                                        Margin="0,0,5,0"
                                        MouseLeftButtonDown="pnlControlBar_MouseLeftButtonDown"
                                        MouseEnter="pnlControlBar_MouseEnter">

                                <Button x:Name="btnClose"
                                        Style="{StaticResource controlButton}"
                                        Tag="{StaticResource color4}"
                                        Click="btnClose_Click">
                                    <fa:IconImage Icon="Xmark" Style="{StaticResource controlButtonIcon}"/>
                                </Button>

                                <Button x:Name="btnMaximize"
                                        Style="{StaticResource controlButton}"
                                        Tag="{StaticResource color6}"
                                        Click="btnMaximize_Click">
                                    <fa:IconImage Icon="Square" Style="{StaticResource controlButtonIcon}"/>
                                </Button>

                                <Button x:Name="btnMinimize"
                                        Style="{StaticResource controlButton}"
                                        Tag="{StaticResource color8}"
                                        Click="btnMinimize_Click">
                                    <fa:IconImage Icon="WindowMinimize" Width="12" Style="{StaticResource controlButtonIcon}"/>
                                </Button>
                            </StackPanel>
                            <!--#endregion-->

                            <!--#region 옵션-->
                            <Grid Grid.Row="1"
                                  HorizontalAlignment="Stretch"
                                  VerticalAlignment="Stretch">

                                <!--#region 당첨판-->
                                <Grid VerticalAlignment="Center" 
                                      Visibility="{Binding WinLoseSettingVisible}">
                                    <StackPanel>
                                        <StackPanel Orientation="Horizontal"
                                                Margin="0,0,0,4">

                                            <TextBlock Text="당첨전체개수"
                                                   Style="{StaticResource headerTextStyle}"/>
                                            <TextBox x:Name="txtUser"
                                                     Style="{StaticResource textBoxStyle}"
                                                     Text="{Binding WinLoseGameCount, Mode=TwoWay, Converter={StaticResource NullCheckConverter}}"
                                                     MaxLength="3">
                                                <behaviors:Interaction.Behaviors>
                                                    <drawBehavior:MatchNumberBehavior/>
                                                </behaviors:Interaction.Behaviors>
                                            </TextBox>

                                            <TextBlock Text="당첨개수"
                                                   Style="{StaticResource headerTextStyle}"/>
                                            <TextBox Text="{Binding WinCount, Mode=TwoWay, Converter={StaticResource NullCheckConverter}}"
                                                 Style="{StaticResource textBoxStyle}"
                                                 MaxLength="3">
                                                <behaviors:Interaction.Behaviors>
                                                    <drawBehavior:MatchNumberBehavior/>
                                                </behaviors:Interaction.Behaviors>
                                            </TextBox>

                                            <Button Content="당첨만들기"
                                                Margin="5,0,0,0"
                                                Style="{StaticResource buttonStyle}"
                                                Command="{Binding MakeWinLoseCommand}"/>
                                            <Button Height="32"
                                                    Width="30"
                                                    Background="Transparent"
                                                    Command="{Binding WinLoseGameClearCommand}"
                                                    Margin="5,0,0,0">
                                                <fa:IconImage Icon="TrashCan" 
                                                              Margin="1,0,0,0"
                                                              Width="22"
                                                              Height="22"
                                                              Foreground="{StaticResource color6}"/>
                                            </Button>
                                        </StackPanel>

                                    </StackPanel>

                                </Grid>
                                <!--#endregion-->

                                <!--#region 순위판-->
                                <Grid VerticalAlignment="Center" 
                                      Visibility="{Binding RankingSettingVisible}">
                                    <StackPanel>
                                        <StackPanel Orientation="Horizontal"
                                                    Margin="0,0,0,4">
                                            <TextBlock Text="순위전체개수"
                                                       Style="{StaticResource headerTextStyle}"/>
                                            <TextBox Style="{StaticResource textBoxStyle}" 
                                                     Text="{Binding RankingGameCount, Mode=TwoWay, Converter={StaticResource NullCheckConverter}}"
                                                     MaxLength="3">
                                                <behaviors:Interaction.Behaviors>
                                                    <drawBehavior:MatchNumberBehavior/>
                                                </behaviors:Interaction.Behaviors>
                                            </TextBox>

                                            <Button Content="순위만들기"
                                                    Margin="5,0,0,0"
                                                    Style="{StaticResource buttonStyle}"
                                                    Command="{Binding MakeRankingCommand}"/>
                                            <Button Height="32"
                                                    Width="30"
                                                    Background="Transparent"
                                                    Command="{Binding RankingGameClearCommand}"
                                                    Margin="5,0,0,0">
                                                <fa:IconImage Icon="TrashCan" 
                                                              Margin="1,0,0,0"
                                                              Width="22"
                                                              Height="22"
                                                              Foreground="{StaticResource color6}"/>
                                            </Button>
                                        </StackPanel>

                                        <StackPanel Orientation="Horizontal">
                                            <StackPanel.Resources>
                                                <Style TargetType="TextBox">
                                                    <Setter Property="MinWidth" Value="45"/>
                                                    <Setter Property="MaxLength" Value="2"/>
                                                    <Setter Property="HorizontalContentAlignment" Value="Center"/>
                                                    <Setter Property="VerticalContentAlignment" Value="Center"/>
                                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                                    <Setter Property="Margin" Value="5,0"/>
                                                </Style>
                                            </StackPanel.Resources>

                                            <TextBlock Text="1등"
                                                       Style="{StaticResource headerTextStyle}"/>
                                            <TextBox Style="{StaticResource textBoxStyle}" 
                                                     Text="{Binding FirstCount, Mode=TwoWay, Converter={StaticResource NullCheckConverter}}">
                                                <behaviors:Interaction.Behaviors>
                                                    <drawBehavior:MatchNumberBehavior/>
                                                </behaviors:Interaction.Behaviors>
                                            </TextBox>

                                            <TextBlock Style="{StaticResource headerTextStyle}"
                                                       Text="2등"/>
                                            <TextBox Style="{StaticResource textBoxStyle}" 
                                                     Text="{Binding SecondCount, Mode=TwoWay, Converter={StaticResource NullCheckConverter}}">
                                                <behaviors:Interaction.Behaviors>
                                                    <drawBehavior:MatchNumberBehavior/>
                                                </behaviors:Interaction.Behaviors>
                                            </TextBox>

                                            <TextBlock Style="{StaticResource headerTextStyle}"
                                                       Text="3등"/>
                                            <TextBox Style="{StaticResource textBoxStyle}"
                                                     Text="{Binding ThirdCount, Mode=TwoWay, Converter={StaticResource NullCheckConverter}}">
                                                <behaviors:Interaction.Behaviors>
                                                    <drawBehavior:MatchNumberBehavior/>
                                                </behaviors:Interaction.Behaviors>
                                            </TextBox>

                                            <TextBlock Style="{StaticResource headerTextStyle}"
                                                       Text="4등"/>
                                            <TextBox Style="{StaticResource textBoxStyle}" 
                                                     Text="{Binding FourthCount, Mode=TwoWay, Converter={StaticResource NullCheckConverter}}">
                                                <behaviors:Interaction.Behaviors>
                                                    <drawBehavior:MatchNumberBehavior/>
                                                </behaviors:Interaction.Behaviors>
                                            </TextBox>

                                            <TextBlock Style="{StaticResource headerTextStyle}"
                                                       Text="5등"/>
                                            <TextBox Style="{StaticResource textBoxStyle}" 
                                                     Text="{Binding FifthCount, Mode=TwoWay, Converter={StaticResource NullCheckConverter}}">
                                                <behaviors:Interaction.Behaviors>
                                                    <drawBehavior:MatchNumberBehavior/>
                                                </behaviors:Interaction.Behaviors>
                                            </TextBox>

                                            <TextBlock Style="{StaticResource headerTextStyle}"
                                                       Text="6등"/>
                                            <TextBox Style="{StaticResource textBoxStyle}" 
                                                     Text="{Binding SixthCount, Mode=TwoWay, Converter={StaticResource NullCheckConverter}}">
                                                <behaviors:Interaction.Behaviors>
                                                    <drawBehavior:MatchNumberBehavior/>
                                                </behaviors:Interaction.Behaviors>
                                            </TextBox>

                                            <TextBlock Style="{StaticResource headerTextStyle}"
                                                       Text="7등"/>
                                            <TextBox Style="{StaticResource textBoxStyle}" 
                                                     Text="{Binding SeventhCount, Mode=TwoWay, Converter={StaticResource NullCheckConverter}}">
                                                <behaviors:Interaction.Behaviors>
                                                    <drawBehavior:MatchNumberBehavior/>
                                                </behaviors:Interaction.Behaviors>
                                            </TextBox>
                                        </StackPanel>
                                    </StackPanel>
                                </Grid>
                                <!--#endregion-->

                                <!--#region 글자-->
                                <StackPanel VerticalAlignment="Center" 
                                            Visibility="{Binding TextSettingVisible}">

                                    <StackPanel Orientation="Horizontal"
                                                Margin="10,0,0,0">
                                        <RadioButton IsChecked="{Binding IsRadioWinLoseUse, Mode=TwoWay}" 
                                                     Content="당첨판" 
                                                     Foreground="White"
                                                     Command="{Binding RadioWinLoseUseCommand}"/>

                                        <RadioButton IsChecked="{Binding IsRadioRankingUse, Mode=TwoWay}"
                                                     Content="순위판" 
                                                     Foreground="White"
                                                     Margin="10,0,0,0"
                                                     Command="{Binding RadioRankingUseCommand}"/>
                                    </StackPanel>

                                    <!--당첨판-->
                                    <StackPanel Orientation="Horizontal"
                                                Margin="0,5,0,0"
                                                Visibility="{Binding IsRadioWinLoseUse, Converter={StaticResource BoolToVisibilityConverter}}">
                                        <TextBlock Style="{StaticResource headerTextStyle}"
                                                   Text="당첨명"/>
                                        <TextBox Style="{StaticResource textBoxStyle}"
                                                 Text="{Binding WinText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

                                        <TextBlock Style="{StaticResource headerTextStyle}"
                                                   Text="꽝명"/>
                                        <TextBox Style="{StaticResource textBoxStyle}"
                                                 Text="{Binding LoseText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

                                        <TextBlock Style="{StaticResource headerTextStyle}"
                                                   Text="숫자크기"/>
                                        <TextBox Style="{StaticResource textBoxStyle}"
                                                 Text="{Binding WinLoseNumberTextSize, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource NullCheckConverter}}"
                                                 MaxLength="2">
                                            <behaviors:Interaction.Behaviors>
                                                <drawBehavior:MatchNumberBehavior/>
                                            </behaviors:Interaction.Behaviors>
                                        </TextBox>

                                        <TextBlock Style="{StaticResource headerTextStyle}"
                                                   Text="글자크기"/>
                                        <TextBox Style="{StaticResource textBoxStyle}"
                                                 Text="{Binding WinLoseTextSize, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource NullCheckConverter}}"
                                                 MaxLength="2">
                                            <behaviors:Interaction.Behaviors>
                                                <drawBehavior:MatchNumberBehavior/>
                                            </behaviors:Interaction.Behaviors>
                                        </TextBox>

                                        <TextBlock Style="{StaticResource headerTextStyle}"
                                                   Text="당첨폰트"/>
                                        <ComboBox ItemsSource="{Binding FontList}"
                                                  SelectedItem="{Binding SelectedWinLoseFont, Mode=TwoWay}"
                                                  Margin="5,0">
                                            <ComboBox.ItemTemplate>
                                                <DataTemplate>
                                                    <TextBlock FontFamily="{Binding}" Text="{Binding}"/>
                                                </DataTemplate>
                                            </ComboBox.ItemTemplate>
                                        </ComboBox>
                                    </StackPanel>

                                    <!--순위판-->
                                    <StackPanel Orientation="Horizontal" 
                                                Margin="0,5,0,0"
                                                Visibility="{Binding IsRadioRankingUse, Converter={StaticResource BoolToVisibilityConverter}}">

                                        <TextBlock Style="{StaticResource headerTextStyle}"
                                                   Text="1등"/>
                                        <TextBox Style="{StaticResource textBoxStyle}"
                                                 Text="{Binding FirstText, Mode=TwoWay}"/>

                                        <TextBlock Style="{StaticResource headerTextStyle}"
                                                   Text="2등"/>
                                        <TextBox Style="{StaticResource textBoxStyle}"
                                                 Text="{Binding SecondText, Mode=TwoWay}"/>

                                        <TextBlock Style="{StaticResource headerTextStyle}"
                                                   Text="3등"/>
                                        <TextBox Style="{StaticResource textBoxStyle}"
                                                 Text="{Binding ThirdText, Mode=TwoWay}">
                                        </TextBox>

                                        <TextBlock Style="{StaticResource headerTextStyle}"
                                                   Text="4등"/>
                                        <TextBox Style="{StaticResource textBoxStyle}"
                                                 Text="{Binding FourthText, Mode=TwoWay}">
                                        </TextBox>

                                        <TextBlock Style="{StaticResource headerTextStyle}"
                                                   Text="5등"/>
                                        <TextBox Style="{StaticResource textBoxStyle}"
                                                 Text="{Binding FifthText, Mode=TwoWay}">
                                        </TextBox>

                                        <TextBlock Style="{StaticResource headerTextStyle}"
                                                   Text="6등"/>
                                        <TextBox Style="{StaticResource textBoxStyle}"
                                                 Text="{Binding SixthText, Mode=TwoWay}">
                                        </TextBox>

                                        <TextBlock Style="{StaticResource headerTextStyle}"
                                                   Text="7등"/>
                                        <TextBox Style="{StaticResource textBoxStyle}"
                                                 Text="{Binding SeventhText, Mode=TwoWay}">
                                        </TextBox>
                                    </StackPanel>

                                    <StackPanel Orientation="Horizontal"
                                                Margin="0,5,0,0"
                                                Visibility="{Binding IsRadioRankingUse, Converter={StaticResource BoolToVisibilityConverter}}">

                                        <TextBlock Style="{StaticResource headerTextStyle}"
                                                   Text="순위꽝명"/>
                                        <TextBox Style="{StaticResource textBoxStyle}"
                                                 Text="{Binding RankingLoseText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

                                        <TextBlock Style="{StaticResource headerTextStyle}"
                                                   Text="순위숫자크기"/>
                                        <TextBox Style="{StaticResource textBoxStyle}"
                                                 Text="{Binding RankingNumberTextSize, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                                                 MaxLength="2">
                                            <behaviors:Interaction.Behaviors>
                                                <drawBehavior:MatchNumberBehavior/>
                                            </behaviors:Interaction.Behaviors>
                                        </TextBox>

                                        <TextBlock Style="{StaticResource headerTextStyle}"
                                                   Text="순위글자크기"/>
                                        <TextBox Style="{StaticResource textBoxStyle}"
                                                 Text="{Binding RankingTextSize, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                 MaxLength="2">
                                            <behaviors:Interaction.Behaviors>
                                                <drawBehavior:MatchNumberBehavior/>
                                            </behaviors:Interaction.Behaviors>
                                        </TextBox>

                                        <TextBlock Style="{StaticResource headerTextStyle}"
                                                   Text="순위폰트"/>
                                        <ComboBox ItemsSource="{Binding FontList}"
                                                  SelectedItem="{Binding SelectedRankingFont, Mode=TwoWay}"
                                                  Margin="5,0">
                                            <ComboBox.ItemTemplate>
                                                <DataTemplate>
                                                    <TextBlock FontFamily="{Binding}" Text="{Binding}"/>
                                                </DataTemplate>
                                            </ComboBox.ItemTemplate>
                                        </ComboBox>
                                    </StackPanel>


                                </StackPanel>
                                <!--#endregion-->

                                <!--#region 박스-->
                                <StackPanel Visibility="{Binding BoxSettingVisible}"
                                            VerticalAlignment="Center">

                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <StackPanel Orientation="Horizontal" Margin="10,0,0,0">
                                            <RadioButton IsChecked="{Binding IsRadioWinLoseUse, Mode=TwoWay}"
                                                         Content="당첨판" 
                                                         Foreground="White"
                                                         Command="{Binding RadioWinLoseUseCommand}"/>

                                            <RadioButton IsChecked="{Binding IsRadioRankingUse, Mode=TwoWay}"
                                                         Content="순위판" 
                                                         Foreground="White"
                                                         Margin="10,0,0,0"
                                                         Command="{Binding RadioRankingUseCommand}"/>
                                        </StackPanel>

                                        <!--#region 당첨판 박스사이즈-->
                                        <StackPanel Margin="10,20,0,0"
                                                    Visibility="{Binding IsRadioWinLoseUse, Converter={StaticResource BoolToVisibilityConverter}}">

                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Style="{StaticResource headerTextStyle}"
                                                           Text="당첨박스너비"/>
                                                <TextBox Style="{StaticResource textBoxStyle}"
                                                         Text="{Binding WinLoseBoxWidth, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                         MaxLength="3">
                                                    <behaviors:Interaction.Behaviors>
                                                        <drawBehavior:MatchNumberBehavior/>
                                                    </behaviors:Interaction.Behaviors>
                                                </TextBox>
                                            </StackPanel>

                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Style="{StaticResource headerTextStyle}"
                                                           Text="당첨박스높이"/>
                                                <TextBox Style="{StaticResource textBoxStyle}"
                                                         Text="{Binding WinLoseBoxHeight, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                         MaxLength="3">
                                                    <behaviors:Interaction.Behaviors>
                                                        <drawBehavior:MatchNumberBehavior/>
                                                    </behaviors:Interaction.Behaviors>
                                                </TextBox>
                                            </StackPanel>

                                        </StackPanel>

                                        <!--#endregion-->

                                        <!--#region 순위판 박스사이즈-->

                                        <StackPanel Margin="10,20,0,0"
                                                    Visibility="{Binding IsRadioRankingUse, Converter={StaticResource BoolToVisibilityConverter}}">
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Style="{StaticResource headerTextStyle}"
                                                           Text="순위박스너비"/>
                                                <TextBox Style="{StaticResource textBoxStyle}"
                                                         Text="{Binding RankingBoxWidth, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                         MaxLength="3">
                                                    <behaviors:Interaction.Behaviors>
                                                        <drawBehavior:MatchNumberBehavior/>
                                                    </behaviors:Interaction.Behaviors>
                                                </TextBox>
                                            </StackPanel>

                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Style="{StaticResource headerTextStyle}"
                                                           Text="순위박스높이"/>
                                                <TextBox Style="{StaticResource textBoxStyle}"
                                                         Text="{Binding RankingBoxHeight, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                         MaxLength="3">
                                                    <behaviors:Interaction.Behaviors>
